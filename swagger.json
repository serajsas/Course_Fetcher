{
  "swagger": "2.0",
  "info": {
    "title": "UBC Course and Major API",
    "version": "1.0.0",
    "description": "An API that allows getting course and major (currently supporting Science majors only)"
  },
  "host": "ubccourseandmajorapi.herokuapp.com",
  "basePath": "/api/v1/",
  "tags": [
    {
      "name": "Course",
      "description": "API for fetching course details"
    },
    {
      "name": "Major",
      "description": "API for fetching major requirements"
    }
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/course/": {
      "get": {
        "summary": "Get course details",
        "tags": [
          "Course"
        ],
        "description": "Returns course details",
        "parameters": [
          {
            "name": "dept",
            "description": "Department code, such as CPSC",
            "in": "query",
            "type": "string",
            "required": true
          },
          {
            "name": "number",
            "description": "Course Number, such as 100 for CPSC 100",
            "in": "query",
            "type": "integer",
            "required": true
          },
          {
            "name": "campus",
            "description": "Campus is either Vancouver or Okanagan",
            "default": "Vancouver",
            "in": "query",
            "type": "string",
            "required": false
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Resource not found"
          },
          "429": {
            "description": "Too many requests"
          }
        }
      }
    },
    "/major/": {
      "get": {
        "summary": "Get major requirements",
        "tags": [
          "Major"
        ],
        "description": "Returns major requirements in all years",
        "parameters": [
          {
            "name": "name",
            "description": "Major name, such as computer science",
            "in": "query",
            "type": "string",
            "required": true
          },
          {
            "name": "specialization",
            "description": "Specialization, whether a major, honours, combined major, combined honours, or dual degree",
            "default": "Major",
            "in": "query",
            "type": "string",
            "required": false
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad request"
          },
          "404": {
            "description": "Resource not found"
          },
          "429": {
            "description": "Too many requests"
          }
        }
      }
    }
  }
}